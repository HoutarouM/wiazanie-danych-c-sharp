<Window x:Class="WiazanieDanych.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WiazanieDanych"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Slider x:Name="font_size" Minimum="10" Maximum="45" Value="15" />

        <TextBlock FontSize="{Binding ElementName=font_size, Path=Value}">Teskst do testowania</TextBlock>

        <TextBox x:Name="text_box" AcceptsReturn="True" />
        <TextBlock Text="{Binding ElementName=text_box, Path=Text}" />

        <TextBlock Foreground="{Binding ElementName=color, Path=SelectedItem.Content}">Teskst do testowania</TextBlock>

        <ComboBox x:Name="color">
            <ComboBoxItem>red</ComboBoxItem>
            <ComboBoxItem>green</ComboBoxItem>
            <ComboBoxItem>blue</ComboBoxItem>
        </ComboBox>
    </StackPanel>
</Window>
