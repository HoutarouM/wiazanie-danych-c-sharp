<Window x:Class="WiazanieDanych.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WiazanieDanych"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <UniformGrid>
        <Slider x:Name="size" Minimum="0" Maximum="100" Value="10" IsSnapToTickEnabled="True" TickFrequency="1" />

        <TextBlock Text="{Binding ElementName=size, Path=Value}" />
    </UniformGrid>
</Window>
